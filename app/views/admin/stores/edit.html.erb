<h1>Edit Store: <%= @store.name %></h1>
<%= form_tag admin_store_path, method: :patch do %>
  <%= label_tag 'Name: ' %>
  <%= text_field_tag :name, @store.name %>
  <%= label_tag 'Description: ' %>
  <%= text_area_tag :description, @store.description %>
  <%= label_tag 'Website: ' %>
  <%= text_field_tag :website, @store.website %>
  <%= label_tag 'Active: ' %>
  <%= check_box_tag :status, 1, @store.is_active? %>
  <%= label_tag 'Category: ' %>
  <%= select_tag :category, options_for_select(@categories, @store.category) %>
  <%= label_tag 'Facebook: ' %>
  <%= text_field_tag :facebook_url, @store.facebook_url %>
  <%= label_tag 'Twitter: ' %>
  <%= text_field_tag :twitter_url, @store.twitter_url %>
  <%= label_tag 'Instagram: ' %>
  <%= text_field_tag :instagram_url, @store.instagram_url %>
  <%= button_tag 'Submit' %>
<% end %>
